@model IEnumerable<Brand>

<li class="dropdown">
    <a asp-controller="Home"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Cars<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var brand in Model)
        {
            <li>
                <a asp-controller="Home" asp-action="Index"
                   asp-route-brand="@brand.BrandName">@brand.BrandName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Home" asp-action="Index" asp-route-Brand="">View all Cars</a>
        </li>
    </ul>
</li>
